<h1>Result</h1>
<div class="mb-3 p-0 w-100">

  <div class="border-start border-5 p-3 mb-3">
    <p><em>Your grid:</em></p>
    <p><%= params[:grid] %></p>
  </div>

  <div class="border-start border-5 p-3 mb-3">
    <p><em>Your word:</em></p>
    <p><%= params[:answer] %></p>
  </div>

  <div class="border-start border-5 p-3 mb-3 background-yellow">
    <p><em>Your result:</em></p>
    <p>Time: <%= @result[:time] %></p>
    <p>Score: <%= @result[:score] %></p>
    <p><%= @result[:message] %></p>
  </div>

</div>

<button class="btn btn-primary">
  <%= link_to "Play again", new_path %>
</button>
